{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__", "./src/**/*.test.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",

    "rootDir": "./src",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}